<h1>Editing attraction</h1>

<%= form_for(@attraction) do |f| %>

  <%= f.label :name %><br>
  <%= f.text_field :name %><br>

  <%= f.label "Height Requirement (in inches)" %><br>
  <%= f.text_field :height %><br>

  <%= f.label "How fun is it? (1-5 scale)" %><br>
  <%= f.number_field :happiness %><br>

  <%= f.label "How nausea-inducing is it? (1-5 scale)" %><br>
  <%= f.number_field :nausea %><br>



  <%= f.label "How many tickets does it cost?" %><br>
  <%= f.number_field :tickets %><br>

  <%= f.submit "Update Attraction" %>

  <%= link_to "Show", attraction_path(@attraction) %>



<% end %>